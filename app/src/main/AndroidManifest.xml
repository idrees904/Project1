<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidjson.recyclerviewimageviewtextview_androidjsoncom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/main_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CompanyActivity"
            android:label="@string/CompanyTitle" />
        <activity
            android:name=".CompanyInfoActivity"
            android:label="@string/CompanyInfoTitle" />
        <activity
            android:name=".SpecialistActivity"
            android:label="@string/SpecialistTitle" />
        <activity
            android:name=".RecordActivity"
            android:label="@string/RecordTitle"/>
    </application>

</manifest>