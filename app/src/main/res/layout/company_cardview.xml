<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/company_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="0dp"
    card_view:cardMaxElevation="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VolleyImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvNameCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/VolleyImageView"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="Название компании"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAddressCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameCompany"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/VolleyImageView"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="Адрес"
            android:textColor="#000"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>